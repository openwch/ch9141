<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="@dimen/width_250"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_layout_2"
        android:background="@drawable/ll_round"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_layout_2"
            android:layout_marginStart="@dimen/margin_layout_2"
            android:layout_marginEnd="@dimen/margin_layout_2"
            android:layout_marginBottom="@dimen/margin_15"

            >
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送配置"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size"
                />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radiogroup_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            >
            <RadioButton
                android:id="@+id/radio_single_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单次发送"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/radio_timing_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定时发送"
                />
            <RadioButton
                android:id="@+id/radio_continuing_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连续发送"

                />
            <RadioButton
                android:id="@+id/radio_file_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文件发送"
                />
        </RadioGroup>
         <LinearLayout
            android:id="@+id/ll_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_layout_1"
            android:orientation="vertical" android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_layout_20"

                >
                <TextView
                    android:text="@string/send_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    />
                <EditText
                    android:id="@+id/send_interval"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"

                    android:gravity="center"
                    android:text="0"
                    />
                <TextView
                    android:text="@string/interval_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_choose_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_layout_20"
            android:layout_marginTop="@dimen/margin_layout_1"
            android:visibility="gone"
            >
            <Button
                android:text="@string/choose_file"
                android:id="@+id/choose_file"
                android:layout_width="@dimen/width_btn_data_70"
                android:layout_height="@dimen/height_btn_data_30"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_round"
                android:textSize="@dimen/text_13"
                />
            <TextView
                android:id="@+id/filePath"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未选择文件"
                android:layout_marginStart="@dimen/margin_layout_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_15"


            >
            <Button
                android:id="@+id/cancel"
                android:layout_width="@dimen/width_btn_data_70"
                android:layout_height="@dimen/height_btn_data_30"
                android:layout_gravity="center"
                android:text="取消"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_round"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="@dimen/text_size_small"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                >
            </LinearLayout>
            <Button
                android:id="@+id/confirm"
                android:layout_width="@dimen/width_btn_data_70"
                android:layout_height="@dimen/height_btn_data_30"
                android:layout_gravity="center"
                android:text="确定"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_round"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="@dimen/text_size_small"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
